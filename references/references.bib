	pmcid = {PMC4337555},
	keywords = {Amino Acid Sequence, Animals, Diptera, DNA Viruses, Genome, Viral, Molecular Sequence Data, Nucleopolyhedroviruses, Open Reading Frames, Phylogeny, Sequence Alignment, Viral Proteins},
