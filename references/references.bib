@article{maruyama_evolution_2016,
	title = {Evolution and {Phylogeny} of {Large} {DNA} {Viruses}, {Mimiviridae} and {Phycodnaviridae} {Including} {Newly} {Characterized} {Heterosigma} akashiwo {Virus}},
