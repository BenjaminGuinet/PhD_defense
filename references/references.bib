@article{mao_complete_2022,
	title = {The {Complete} {Genome} of \textit{{Chelonus} insularis} {Reveals} {Dynamic} {Arrangement} of {Genome} {Components} in {Parasitoid} {Wasps} {That} {Produce} {Bracoviruses}},
